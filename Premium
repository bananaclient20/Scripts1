-- Banana Client 4.0 Premium Loader (tylko weryfikacja klucza)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- Sprawdzenie klucza i czasu
if not getgenv().BananaKey or not getgenv().BananaKeyTime then
    warn("Nie znaleziono klucza! Uruchom Script 1 aby wygenerować klucz.")
    return
end

local currentTime = os.time()
local keyTime = getgenv().BananaKeyTime
local diff = currentTime - keyTime
if diff > 86400 then -- 24h = 86400 sekund
    warn("Twój klucz wygasł! Wygeneruj nowy w Script 1.")
    return
end

-- Usuń stare GUI
pcall(function()
    local old = LocalPlayer:FindFirstChild("PlayerGui") and LocalPlayer.PlayerGui:FindFirstChild("BananaLoader_GUI")
    if old then old:Destroy() end
end)

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BananaLoader_GUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Tło fullscreen
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1,0,1,0)
bg.BackgroundColor3 = Color3.fromRGB(15,15,15)
bg.Parent = screenGui

-- Neon gradient
local grad = Instance.new("UIGradient")
grad.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255,0,200)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0,255,255)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(255,255,0))
}
grad.Rotation = 0
grad.Parent = bg

spawn(function()
    local angle = 0
    while bg.Parent do
        angle = (angle + 1) % 360
        grad.Rotation = angle
        RunService.RenderStepped:Wait()
    end
end)

-- Tytuł z glow
local title = Instance.new("TextLabel")
title.AnchorPoint = Vector2.new(0.5,0.5)
title.Position = UDim2.new(0.5,0,-0.2,0) -- start poza ekranem
title.Size = UDim2.new(0.8,0,0.3,0)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBlack
title.Text = "BANANA CLIENT 4.0"
title.TextColor3 = Color3.fromRGB(245,245,245)
title.TextScaled = true
title.TextWrapped = true
title.Parent = bg

local glow = Instance.new("UIStroke")
glow.Parent = title
glow.Color = Color3.fromRGB(255,255,255)
glow.Thickness = 4
glow.Transparency = 0.5

-- Animacja wejścia napisu
TweenService:Create(title, TweenInfo.new(1.2, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {
    Position = UDim2.new(0.5,0,0.5,0)
}):Play()

-- Pulsowanie napisu
spawn(function()
    while title.Parent do
        TweenService:Create(title, TweenInfo.new(1.2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {
            TextTransparency = 0.1
        }):Play()
        wait(2.4)
    end
end)

-- Funkcja do wczytania Banana Client
local function loadBananaClient()
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/bananaclient20/Scripts1/refs/heads/main/Scripts%20farm"))()
    end)
    if not success then
        warn("[BananaClient] Błąd wczytywania skryptu:", err)
    end
end

-- Wczytanie Banana Client i animacja wyjścia GUI
spawn(function()
    loadBananaClient()

    -- Animacja wyjścia napisu i tła
    TweenService:Create(title, TweenInfo.new(0.8, Enum.EasingStyle.Quart, Enum.EasingDirection.In), {
        Position = UDim2.new(0.5,0,1.2,0),
        TextTransparency = 1
    }):Play()
    TweenService:Create(bg, TweenInfo.new(0.8, Enum.EasingStyle.Quart, Enum.EasingDirection.In), {
        BackgroundTransparency = 1
    }):Play()
    wait(0.85)
    pcall(function() screenGui:Destroy() end)
end)
